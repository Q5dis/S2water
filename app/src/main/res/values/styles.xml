<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#2643FF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="shapeAppearanceOverlay">@style/RoundedCorners</item>
    </style>

    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="nullColor" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#ffffff</item>
    </style>

    <style name="WaterCheckBottomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:textColor">#2643FF</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item> <!-- Removes shadow outline -->
        <item name="shapeAppearanceOverlay">@style/NoRadiusShape</item>
    </style>

    <style name="NoRadiusShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">@null</item>
        <item name="cornerSize">0dp</item>
    </style>



    <style name="CustomBotNav" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">#ffffff</item>
        <item name="itemIconTint">@null</item>
        <item name="itemTextColor">@android:color/transparent</item>
    </style>

    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">

    </style>

</resources>
