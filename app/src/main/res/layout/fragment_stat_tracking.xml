<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatTrackingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"
            android:padding="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10월"
                android:textSize="32dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="10dp"
                    android:layout_height="13dp"
                    android:background="@drawable/home_blue"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 수분 가든" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="오늘의 음수량:\n2000ml           "
                android:textAlignment="viewEnd"
                android:textColor="#A1ABD9"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/MyGarden"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TableLayout
            android:id="@+id/MyGardenTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
        </TableLayout>


    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:rowCount="1"
        android:columnCount="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/goodstat_hill"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:id="@+id/imageViewSprout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:translationY="-30dp" />

    </GridLayout>


</FrameLayout>